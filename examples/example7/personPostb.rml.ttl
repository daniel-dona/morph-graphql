@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix rmlc: <http://www.oeg-upm.net/ns/rmlc#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://www.example.com/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix schema: <http://schema.org/>.

<TMPersona>
	rml:logicalSource [
		rml:source  "https://raw.githubusercontent.com/dachafra/mapping-translator/master/examples/example6/personas.csv";
	];

	rr:subjectMap [
		rml:reference "id";
		rr:class schema:Person
	];

	rr:predicateObjectMap [
	  rr:predicate schema:givenName;
	  rr:objectMap    [ rml:reference "nombre" ]
	];

	rr:predicateObjectMap [
	  rr:predicate schema:familyName;
	  rr:objectMap    [ rml:reference "apellido" ]
	];

	rr:predicateObjectMap [
	  rr:predicate schema:name;
	  rr:objectMap    [ rr:template  "{nombre} {apellido}" ]
	];

	rr:predicateObjectMap [
    	  rr:predicate schema:telephone;
    	  rr:objectMap    [
    	    rml:reference  "telephone";
    	    rr:datatype xsd:integer;
    	  ]
    	];

	rr:predicateObjectMap [
		  rr:predicate schema:email;
		  rr:objectMap [
		  	rmlc:functions "lower(substr(nombre,1,1) || apellido || '@fi.upm.es')"
		  ]
	];

	rr:predicateObjectMap [
          rr:predicate schema:username
          rr:joinCondition [
            rmlc:child [
                rml:reference "email";
            ];
            rmlc:parent [
                rmlc:functions "username || '@fi.upm.es'";
            ]
          ];
    ];
.

<TMPPublicacion>
	rml:logicalSource [
		rml:source  "https://raw.githubusercontent.com/dachafra/mapping-translator/master/examples/example6/comentarios.csv";
	];

	rr:subjectMap [
		rr:template "http://ex.org/{id}";
		rr:class schema:SocialMediaPosting
	];

	rr:predicateObjectMap [
	  rr:predicate schema:author;
	  rr:objectMap    [ rml:reference "usuario" ]
	];

	rr:predicateObjectMap [
	  rr:predicate schema:comment;
	  rr:objectMap    [ rml:reference "mensaje" ]
	];

.
